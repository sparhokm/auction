{
    "name": "sparhokm/demo-auction",
    "type": "project",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8",
        "symfony/console": "^5.3"
    },
    "require-dev": {
        "overtrue/phplint": "^3.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.10"
    },
    "autoload": {
        "psr-4": {
          "App\\": "src/"
        }
    },
    "scripts": {
        "lint" : "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "app": "php bin/app.php --ansi"
    }
}
