{
    "name": "sparhokm/demo-auction",
    "type": "project",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-mbstring": "^8.1",
        "doctrine/annotations": "^1.13",
        "doctrine/migrations": "^3.4",
        "doctrine/orm": "^2.9",
        "guzzlehttp/guzzle": "^7.3",
        "laminas/laminas-config-aggregator": "^1.6",
        "league/oauth2-server": "^8.3",
        "middlewares/negotiation": "^2.0",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.3",
        "ramsey/uuid": "^4.2",
        "sentry/sdk": "^3.1",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8",
        "symfony/cache": "^6.0",
        "symfony/config": "^6.0",
        "symfony/console": "^6.0",
        "symfony/mailer": "^6.0",
        "symfony/property-info": "^6.1",
        "symfony/serializer": "^6.1",
        "symfony/translation": "^6.0",
        "symfony/validator": "^6.0",
        "twig/twig": "^3.3",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.3",
        "dms/phpunit-arraysubset-asserts": "^0.4.0",
        "doctrine/data-fixtures": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.6",
        "lctrs/psalm-psr-container-plugin": "^1.6",
        "overtrue/phplint": "^4.1",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.22"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "autoload": {
        "files": [
            "src/env.php"
        ],
        "psr-4": {
          "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint" : "phplint",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml",
        "test": "phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/test/coverage",
        "app": "php bin/app.php --ansi"
    }
}
