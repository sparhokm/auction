{
    "name": "sparhokm/demo-auction",
    "type": "project",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "ramsey/uuid": "^4.2",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8",
        "symfony/console": "^5.3",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "overtrue/phplint": "^3.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.10"
    },
    "autoload": {
        "psr-4": {
          "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint" : "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    }
}
